            const street = document.querySelector('input[name="street"]').value;
            const city = document.querySelector('input[name="city"]').value;
            const state = document.querySelector('input[name="state"]').value;
            const postalCode = document.querySelector('input[name="postalCode"]').value;
            const country = document.querySelector('input[name="country"]').value;
            const additionalInfo = document.querySelector('input[name="additionalInfo"]').value;
            const couponCode = document.getElementById("couponCode").value;

            const totalAmount = parseFloat(document.getElementById("total-amount").textContent.replace("₹", ""));

            const orderData = {
                addressId,
                paymentMethod: selectedPaymentMethod,
                couponCode,
                firstName,
                lastName,
                phoneNumber,
                street,
                city,
                state,
                postalCode,
                country,
                additionalInfo,
            };

            let paymentUrl;
            switch (selectedPaymentMethod) {
                case "UPI Payment":
                    paymentUrl = "/cart/checkout/upi";
                    break;
                case "Wallet Payments":
                    paymentUrl = "/cart/checkout/wallet";
                    break;
                case "Cash on Delivery":
                    paymentUrl = "/cart/checkout/cod";
                    break;
                default:
                    console.error("Invalid payment method selected");
                    return;
            }

            if (selectedPaymentMethod === "UPI Payment") {
                try {
                    const response = await axios.post(paymentUrl, {
                        amount: totalAmount,
                        ...orderData,
                    });
                    const { orderId, newOrderId, user, key } = response.data;

                    console.log("response.data : ", response.data);

                    const options = {
                        key: key,
                        amount: totalAmount * 100,
                        currency: "USD",
                        name: "Byteverse",
                        description: "Laptop Purchase",
                        order_id: orderId,
                        handler: function (response) {
                            console.log(response);
                            verifyPayment(response, orderData);
                        },
                        prefill: {
                            name: `${firstName} ${lastName}`,
                            email: user.email,
                        },
                        theme: {
                            color: "#3399cc",
                        },
                        method: {
                            card: true,
                            upi: true,
                            wallet: true,
                            netbanking: true,
                        },
                    };

                    const rzp = new Razorpay(options);
                    rzp.open();

                    rzp.on("payment.failed", async function (response) {
                        const failureData = response.error;

                        rzp.close();
                        document.querySelector(".razorpay-container")?.remove();

                        console.log("response : ", response);

                        Swal.fire({
                            title: "Payment Failed",
                            text: "Unfortunately, the payment failed. Please try again in order history.",
                            icon: "error",
                            confirmButtonText: "Okay",
                        }).then(async (result) => {
                            if (result.isConfirmed) {
                                try {
                                    await axios.post("/cart/checkout/upi/order-failure", {
                                        order_id: failureData.metadata.order_id,
                                        payment_id: failureData.metadata.payment_id,
                                        paymentStatus: "Failed",
                                        deliveryStatus: "Pending",
                                        failureDetails: {
                                            code: failureData.code,
                                            description: failureData.description,
                                            source: failureData.source,
                                            step: failureData.step,
                                            reason: failureData.reason,
                                        },
                                    });

                                    window.location.href = `/cart/checkout/order-placed/${newOrderId}`;
                                } catch (error) {
                                    console.error("Error updating order on payment failure:", error);
                                }
                            }
                        });
                    });
                } catch (error) {
                    console.error(error);
                    alert("Error creating order. Please try again.");
                }
            } else if (selectedPaymentMethod == "Wallet Payments") {
                console.log("qweqweqw ");
                try {
                    const response = await axios.post(paymentUrl, {
                        ...orderData,
                    });
                    const order_Id = response.data.orderDetails.orderId;

                    window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                } catch (error) {
                    console.log(error);
                    Swal.fire({
                        title: "Payment Failed",
                        text: error?.response?.data?.message || "Payment failed. Please try again.",
                        icon: "error",
                        confirmButtonText: "Okay",
                    });
                }

                // console.log("1231");

                // console.log("resopoonse wall : ", response);

                // if (response.status == 200) {
                //     const order_Id = response.data.orderDetails.orderId;

                //     window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                // } else {
                //     Swal.fire({
                //         title: "Payment Failed",
                //         text: response.data.message || "Payment failed. Please try again.",
                //         icon: "error",
                //         confirmButtonText: "Okay",
                //     });
                // }
            } else {
                try {
                    const response = await axios.post(paymentUrl, orderData, {
                        headers: {
                            "Content-Type": "application/json",
                        },
                    });

                    if (response.status == 200) {
                        const order_Id = response.data.orderDetails.orderId;

                        window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                    } else {
                        Swal.fire({
                            title: "Payment Failed",
                            text: response.data.message || "Payment failed. Please try again.",
                            icon: "error",
                            confirmButtonText: "Okay",
                        });
                    }
                } catch (error) {
                    // Handle error response
                    alert("Error placing order. Please try again.");
                    console.error(error);
                }
            }
        });

        async function verifyPayment(paymentResponse, orderData) {
            try {
                console.log(paymentResponse);

                const verificationResponse = await axios.post("/cart/checkout/upi/verify-payment", {
                    order_id: paymentResponse.razorpay_order_id,
                    payment_id: paymentResponse.razorpay_payment_id,
                    razorpay_signature: paymentResponse.razorpay_signature,
                });

                console.log("verificationResponse : ", verificationResponse);

                let order_Id = verificationResponse.data.newOrderId;

                if (verificationResponse.status === 200) {
                    window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Payment Verification Failed",
                        text: "We couldn't verify your payment. Please contact support.",
                        confirmButtonText: "OK",
                        footer: "<a href='/contact'>Contact Support</a>",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                        }
                    });
                }
            } catch (error) {
                console.error("Error verifying payment:", error);
                alert("Error verifying payment. Please try again.");
            }
        }
    </script>

