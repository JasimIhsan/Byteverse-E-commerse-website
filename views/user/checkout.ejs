    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const codOption = document.getElementById("payment-cash-on-delivery");
            const codMessage = document.getElementById("cod-message");

            function updatePaymentOptions() {
                // Parse the total amount as an integer after removing the dollar sign
                const totalAmount = parseInt(document.getElementById("total-amount").textContent.replace("₹", ""));

                if (totalAmount >= 1000) {
                    codOption.disabled = true;
                    codMessage.style.display = "inline"; // Show the message
                } else {
                    codOption.disabled = false;
                    codMessage.style.display = "none"; // Hide the message
                }
            }

            // Run once when the page loads
            updatePaymentOptions();

            // If total amount changes, recheck the payment options
            document.getElementById("total-amount").addEventListener("change", updatePaymentOptions);
        });

        function populateAddress() {
            const selectedAddress = document.getElementById("savedAddress").selectedOptions[0]; // Get the selected option
            const firstName = selectedAddress.getAttribute("data-firstname");
            const lastName = selectedAddress.getAttribute("data-lastname");
            const phoneNumber = selectedAddress.getAttribute("data-phonenumber");
            const street = selectedAddress.getAttribute("data-street");
            const city = selectedAddress.getAttribute("data-city");
            const state = selectedAddress.getAttribute("data-state");
            const postalCode = selectedAddress.getAttribute("data-postalcode");
            const country = selectedAddress.getAttribute("data-country");
            const additionalInfo = selectedAddress.getAttribute("data-additionalinfo");

            // Populate the form fields with the selected address data
            document.querySelector('input[name="firstName"]').value = firstName || "";
            document.querySelector('input[name="lastName"]').value = lastName || "";
            document.querySelector('input[name="phoneNumber"]').value = phoneNumber || "";
            document.querySelector('input[name="street"]').value = street || "";
            document.querySelector('input[name="city"]').value = city || "";
            document.querySelector('input[name="state"]').value = state || "";
            document.querySelector('input[name="postalCode"]').value = postalCode || "";
            document.querySelector('input[name="country"]').value = country || "";
            document.querySelector('input[name="additionalInfo"]').value = additionalInfo || "";
        }

        document.getElementById("apply-coupon-btn").addEventListener("click", function (event) {
            event.preventDefault();
            const selectedCoupon = document.getElementById("couponCode").value;

            if (!selectedCoupon) {
                Swal.fire({
                    icon: "warning",
                    title: "Oops...",
                    text: "Please select a coupon!",
                });
                return;
            }

            // Send coupon code to server for validation
            axios
                .post("/apply-coupon", { couponCode: selectedCoupon })
                .then(function (response) {
                    console.log("response : ", response);

                    if (response.data.success) {
                        const discountAmount = response.data.discountAmount;
                        const newTotal = response.data.newTotal;
                        const originalTotal = response.data.total;

                        const appliedCoupon = selectedCoupon;

                        console.log("DISCOUNT : ", discountAmount);
                        console.log("NEWTOTAL : ", newTotal);

                        //show coupon row
                        if (discountAmount != null && newTotal != null) {
                            document.getElementById("coupon-code-row").style.display = "table-row";
                            document.getElementById("coupon-code").innerText = appliedCoupon;
                            document.getElementById("discount-amount").innerText = `-₹${discountAmount.toFixed(2)}`;

                            document.getElementById("original-price").style.display = "inline";
                            document.getElementById("original-price").innerText = `₹${originalTotal.toFixed(2)}`;
                            document.getElementById("total-amount").innerText = `₹${newTotal.toFixed(2)}`;

                            document.getElementById("remove-coupon-btn").style.display = "inline-block";
                        } else {
                            console.error("Error: Discount amount or new total is null or undefined.");
                        }

                        Swal.fire({
                            icon: "success",
                            title: "Coupon Applied",
                            text: `Discount: ₹${discountAmount}`,
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.data.message,
                        });
                    }
                })
                .catch(function (error) {
                    console.error("Error applying coupon:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Server Error",
                        text: "An error occurred while applying the coupon.",
                    });
                });
        });

        document.getElementById("remove-coupon-btn").addEventListener("click", function () {
            axios
                .post("/remove-coupon")
                .then(function (response) {
                    if (response.data.success) {
                        document.getElementById("coupon-code-row").style.display = "none";
                        document.getElementById("remove-coupon-btn").style.display = "none";

                        const originalTotal = response.data.total;
                        document.getElementById("total-amount").innerText = `₹${originalTotal.toFixed(2)}`;
                        document.getElementById("original-price").style.display = "none";

                        document.getElementById("couponCode").value = "";

                        Swal.fire({
                            icon: "info",
                            title: "Coupon Removed",
                            text: "The coupon has been removed.",
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.data.message,
                        });
                    }
                })
                .catch(function (error) {
                    console.error("Error removing coupon:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Server Error",
                        text: "An error occurred while removing the coupon.",
                    });
                });
        });

        document.getElementById("placeOrderBtn").addEventListener("click", async function (event) {
            event.preventDefault();

            const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

