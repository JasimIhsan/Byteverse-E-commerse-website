    <script>
        function clearError(elementId) {
            document.getElementById(elementId).innerText = "";
        }

        function validateName(input) {
            const value = input.value.trim();
            const errorElementId = input.name === "firstName" ? "firstNameError" : "lastNameError";
            if (value.length < 3) {
                document.getElementById(errorElementId).innerText = "Name must be at least 3 characters.";
            } else {
                clearError(errorElementId);
            }
        }

        function validatePhoneNumber(input) {
            const value = input.value.trim();
            if (!/^\d{10}$/.test(value)) {
                document.getElementById("phoneNumberError").innerText = "Phone number must be 10 digits.";
            } else {
                clearError("phoneNumberError");
            }
        }

        function validateStreetAddress(input) {
            const value = input.value.trim();
            if (value.length === 0) {
                document.getElementById("streetError").innerText = "Street address cannot be empty.";
            } else {
                clearError("streetError");
            }
        }

        function validateCity(input) {
            const value = input.value.trim();
            if (value.length === 0) {
                document.getElementById("cityError").innerText = "City cannot be empty.";
            } else {
                clearError("cityError");
            }
        }

        function validateState(input) {
            const value = input.value.trim();
            if (value.length === 0) {
                document.getElementById("stateError").innerText = "State cannot be empty.";
            } else {
                clearError("stateError");
            }
        }

        function validatePostalCode(input) {
            const value = input.value.trim();
            if (!/^\d{6}$/.test(value)) {
                document.getElementById("postalCodeError").innerText = "Postal code must be 6 digits.";
            } else {
                clearError("postalCodeError");
            }
        }

        function validateCountry(input) {
            const value = input.value.trim();
            if (value.length === 0) {
                document.getElementById("countryError").innerText = "Country cannot be empty.";
            } else {
                clearError("countryError");
            }
        }
    </script>
