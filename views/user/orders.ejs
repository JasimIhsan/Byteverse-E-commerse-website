        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            function cancelOrder(orderId, status) {
                // SweetAlert for getting the reason for cancellation
                Swal.fire({
                    title: "Cancel Order",
                    input: "textarea",
                    inputPlaceholder: "Enter reason for cancellation",
                    showCancelButton: true,
                    confirmButtonText: "Submit",
                    cancelButtonText: "Close",
                    preConfirm: (reason) => {
                        if (!reason) {
                            Swal.showValidationMessage("Reason is required for cancellation.");
                        }
                        return { reason: reason };
                    },
                }).then((result) => {
                    if (result.isConfirmed) {
                        const reason = result.value.reason;
                        Swal.fire({
                            title: "Are you sure?",
                            text: `You are about to cancel this order.`,
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonText: "Yes, cancel it!",
                            cancelButtonText: "No, keep it",
                        }).then((confirmation) => {
                            if (confirmation.isConfirmed) {
                                // Check if the status allows cancellation
                                if (status === "Pending" || status === "Processing") {
                                    // Directly cancel the order
                                    sendCancellation(orderId, reason);
                                } else {
                                    Swal.fire("Cannot Cancel!", "Order status does not allow cancellation.", "error");
                                }
                            }
                        });
                    }
                });
            }
        
            function sendCancellation(orderId, reason) {
                axios
                    .post(`/profile/orders/cancel-order`, {
                        orderId: orderId,
                        reason: reason,
                    })
                    .then((response) => {
                        if (response.data.success) {
                            Swal.fire("Cancelled!", response.data.message, "success").then(() => location.reload()); // Reload the page to reflect changes
                        } else {
                            Swal.fire("Error!", response.data.message || "Failed to cancel the order.", "error");
                        }
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                        Swal.fire("Error!", "Something went wrong.", "error");
                    });
            }

            function returnOrder(orderId, deliveryStatus) {
                if (deliveryStatus !== "Delivered") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Not Eligible',
                        text: 'Order is not eligible for return.',
                    });
                    return;
                }

                Swal.fire({
                    title: 'Return Reason',
                    input: 'textarea',
                    inputLabel: 'Please provide a reason for the return:',
                    inputPlaceholder: 'Enter reason here',
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                    cancelButtonText: 'Cancel',
                    inputValidator: (value) => {
                        if (!value) {
                            return 'You need to provide a reason!';
                        }
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.post('/profile/orders/return-order', { orderId, reason: result.value })
                            .then(response => {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Return Successful',
                                    text: response.data.message,
                                }).then((result) => {
                                    location.reload()
                                });
                                console.log("Refund processed:", response.data);
                            })
                            .catch(error => {
                                let errorMessage = "An error occurred while processing the return.";
                                if (error.response && error.response.data && error.response.data.message) {
                                    errorMessage = error.response.data.message;
                                }
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: errorMessage,
                                });
                                console.error("Error processing return:", error);
                            });
                    }
                });
            }


        </script>
        
    </body>
</html>
