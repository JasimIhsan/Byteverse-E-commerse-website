                <div class="page-content">
                    <div class="container">
                        <div class="dashboard">
                            <div class="row">
                                <aside class="col-md-4 col-lg-3">
                                    <ul class="nav nav-dashboard flex-column mb-3 mb-md-0">
                                        <li class="nav-item">
                                            <a class="nav-link" href="/<%= user._id %>/profile">Dashboard</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" href="/<%= user._id %>/profile/orders">Orders</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/profile/wallet">Wallet</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link" href="/<%= user._id %>/profile/address">Addresses</a>
                                        </li>
                                        <li class="nav-item" style="margin-top: 10px">
                                            <form action="/logout" method="POST" style="display: inline">
                                                <button type="submit" class="nav-link" style="border: none; background: none; padding: 0">Sign Out</button>
                                            </form>
                                        </li>
                                    </ul>
                                </aside>
                                <!-- End .col-lg-3 -->

                                <div class="col-md-8 col-lg-9">
                                    <div class="tab-content">
                                        <div class="tab-pane fade active show" id="tab-orders" role="tabpanel" aria-labelledby="tab-orders-link">
                                            <h1>Order History</h1>
                                            <form id="filterForm" method="GET" action="/<%= user._id %>/profile/orders" style="margin-bottom: 15px">
                                                <select name="status" class="filter-select" style="font-size: 12px; margin-right: 10px">
                                                    <option value="all">All</option>
                                                    <option value="Pending">Pending</option>
                                                    <option value="Shipped">Shipped</option>
                                                    <option value="Delivered">Delivered</option>
                                                    <option value="Cancelled">Cancelled</option>
                                                </select>

                                                <select name="dateRange" class="filter-select" style="font-size: 12px; margin-right: 10px">
                                                    <option value="all">All Dates</option>
                                                    <option value="week">Last Week</option>
                                                    <option value="twoWeeks">Last 2 Weeks</option>
                                                    <option value="month">Last Month</option>
                                                    <option value="threeMonths">Last 3 Months</option>
                                                </select>

                                                <button type="submit" class="btn btn-outline" style="font-size: 12px">Apply Filters</button>
                                            </form>

                                            <div class="order-list">
                                                <% if (orders && orders.length > 0) { %> <% orders.forEach(order => { %>
                                                <div class="card">
                                                    <div class="card-header">
                                                        <div class="card-title">
                                                            <span>Order <%= order.orderId %></span>
                                                            <span class="card-date"><%= order.orderDate.toDateString() %></span>
                                                        </div>
                                                    </div>
                                                    <div class="card-content">
                                                        <div class="order-summary">
                                                            <div>
                                                                <p class="order-total">Total: ₹<%= order.total.toFixed(2) %></p>
                                                                <p class="order-items"><%= order.products.length %> item(s)</p>
                                                            </div>
                                                            <div>
                                                                <span class="order-status status-<%= order.deliveryStatus.toLowerCase() %>"><%= order.deliveryStatus %></span>
                                                            </div>
                                                        </div>
                                                        <ul class="item-list">
                                                            <% order.products.forEach(product => { %>
                                                            <li class="item d-flex align-items-center">
                                                                <img src="/<%= product.productId.images[0] %>" alt="<%= product.productId.name %>" style="width: 75px; height: 75px" />
                                                                <span><%= product.productId.name %> (x<%= product.quantity %>)</span>
                                                                <span>₹<%= product.price.toFixed(2) %></span>
                                                            </li>
                                                            <% }); %>
                                                        </ul>
                                                    </div>
                                                    <div class="card-footer">
                                                        <% if (order.deliveryStatus === 'Pending' || order.deliveryStatus === 'Processing') { %>
                                                            <button class="btn btn-outline" style="font-size: 12px" onclick="cancelOrder('<%= order._id %>', '<%= order.deliveryStatus %>')">Cancel Order</button>
                                                        <% } else if (order.deliveryStatus === 'Cancelled') { %>
                                                            <p>Order cancelled successfully</p>
                                                        <% } else if (order.deliveryStatus === 'Delivered' ) { %>
                                                            <button class="btn btn-outline" style="font-size: 12px" onclick="returnOrder('<%= order._id %>', '<%= order.deliveryStatus %>')">Return</button>
                                                        <% } else if (order.deliveryStatus === 'Returned' && order.paymentStatus === 'Refunded') { %>
                                                            <p>Order returned successfully</p>
                                                        <% } %>                                                        
                                                        <form action="/profile/orders/orderdetail/<%= order._id %>" method="get">
                                                            <button type="submit" class="btn btn-outline" style="font-size: 12px" >Order Details</button>
                                                        </form>

                                                    </div>
                                                </div>
                                                <% }); %> <% } else { %>
                                                <p>No orders found.</p>
                                                <% } %>
                                            </div>
                                        </div>
                                        <nav class="pagination" aria-label="Pagination">
                                            <!-- Previous Button -->
                                            <button aria-label="Go to previous page" <%= currentPage === 1 ? 'disabled' : '' %> onclick="window.location.href='?page=<%= currentPage - 1 %>'">
                                                <span class="sr-only">Previous</span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="m15 18-6-6 6-6"/>
                                                </svg>
                                            </button>
                                        
                                            <!-- Page Numbers -->
                                            <% 
                                                const startPage = Math.max(1, currentPage - 2);
                                                const endPage = Math.min(totalPages, currentPage + 2);
                                            %>
                                        
                                            <% for (let i = startPage; i <= endPage; i++) { %>
                                                <button class="<%= i === currentPage ? 'active' : '' %>" aria-current="<%= i === currentPage ? 'page' : '' %>"
                                                        onclick="window.location.href='?page=<%= i %>'">
                                                    <%= i %>
                                                </button>
                                            <% } %>
                                        
                                            <!-- Ellipsis if more pages exist -->
                                            <% if (endPage < totalPages) { %>
                                                <span class="ellipsis" aria-hidden="true">…</span>
                                                <button onclick="window.location.href='?page=<%= totalPages %>'"><%= totalPages %></button>
                                            <% } %>
                                        
                                            <!-- Next Button -->
                                            <button aria-label="Go to next page" <%= currentPage === totalPages ? 'disabled' : '' %> onclick="window.location.href='?page=<%= currentPage + 1 %>'">
                                                <span class="sr-only">Next</span>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <path d="m9 18 6-6-6-6"/>
                                                </svg>
                                            </button>
                                        </nav>
                                        
                                    </div>
                                </div>

                                <!-- End .col-lg-9 -->
                            </div>

