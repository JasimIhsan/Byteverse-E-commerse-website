                padding: 8px 16px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .button:disabled {
                background-color: #ffffff;
                cursor: not-allowed;
                color: gray;
            }

            .button-outline {
                background-color: white;
                color: #3b82f6;
                border: 1px solid #5c59e8;
            }

            .table-container {
                border: 1px solid #ddd;
                border-radius: 8px;
                overflow-x: auto;
                margin-bottom: 24px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th {
                background-color: #f9fafb;
                padding: 12px 16px;
                text-align: left;
                font-weight: 500;
                color: #6b7280;
                border-bottom: 1px solid #ddd;
            }

            td {
