        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

        <script>
            function openModal() {
                document.getElementById("modalBackdrop").classList.add("active");
                document.getElementById("addMoneyModal").classList.add("active");
            }

            function closeModal() {
                document.getElementById("modalBackdrop").classList.remove("active");
                document.getElementById("addMoneyModal").classList.remove("active");
            }

            async function addMoney(event) {
                event.preventDefault();
                const amount = document.querySelector('input[name="amount"]').value;

                try {
                    const { data } = await axios.post("/profile/wallet/add-money", { amount });

                    const options = {
                        key: data.key,
                        amount: amount * 100,
                        currency: "INR",
                        name: "Add Money to Wallet",
                        description: "Transaction for adding money to wallet",
                        order_id: data.orderId,
                        handler: async function (response) {
                            await verifyAddMoneyPayment(response, data.orderId, amount);
                        },
                        prefill: {
                            name: "Your Name",
                            email: "Your Email",
                        },
                        theme: {
                            color: "#3399cc",
                        },
                    };

                    const rzp = new Razorpay(options);
                    rzp.open();

                    rzp.on("payment.failed", async function (response) {
                        await rzp.close();

                        Swal.fire({
                            title: "Payment Failed",
                            text: response.error.description,
                            icon: "error",
                            confirmButtonText: "Okay",
                        });
                    });
                } catch (error) {
                    console.error("Error adding money to wallet:", error);
                    Swal.fire({
                        title: "Error",
                        text: error?.response?.data?.message || "Failed to initiate money addition. Please try again.",
                        icon: "error",
                        confirmButtonText: "Okay",
                    });
                }
            }

            async function verifyAddMoneyPayment(paymentResponse, orderId, amount) {
                try {
                    console.log(paymentResponse);

                    const verificationResponse = await axios.post("/profile/wallet/add-money/varify", {
                        paymentId: paymentResponse.razorpay_payment_id,
                        payment_signature: paymentResponse.razorpay_signature,
                        orderId: orderId,
                        amount: amount,
                    });

                    if (verificationResponse.status === 200) {
                        Swal.fire({
                            title: "Success!",
                            text: "Money added successfully to your wallet!",
                            icon: "success",
                            confirmButtonText: "Okay",
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        rz;
                        Swal.fire({
                            icon: "error",
                            title: "Payment Verification Failed",
                            text: "We couldn't verify your payment. Please contact support.",
                            confirmButtonText: "OK",
                        });
                    }
                } catch (error) {
                    console.error("Error verifying add money payment:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Failed to verify payment. Please try again later.",
                    });
                }
            }

            document.getElementById("addMoneyForm").addEventListener("submit", addMoney);
        </script>
