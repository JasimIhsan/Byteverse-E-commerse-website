        <script>
            //clear search bar
            document.addEventListener('DOMContentLoaded', function () {
                const clearSearchButton = document.getElementById('clear-search');
                const searchInput = document.getElementById('search-input');
                
                if (clearSearchButton) {
                    clearSearchButton.addEventListener('click', function() {
                        searchInput.value = '';
                        
                        clearSearchButton.closest('form').submit();
                    });
                }
            });

            //search bar
            document.addEventListener('DOMContentLoaded', function () {
                const clearSearchButton = document.getElementById('clear-search');
                const searchInput = document.getElementById('search-input');
                const searchButton = document.getElementById('search-button');
                
                function toggleClearButton() {
                    if (searchInput.value.trim() !== "") {
                        clearSearchButton.style.display = "inline-block";
                        clearSearchButton.style.right = '10px';
                        searchButton.style.right = '30px';
                    } else {
                        clearSearchButton.style.display = "none"; 
                    }
                }

                toggleClearButton();

                searchInput.addEventListener('input', toggleClearButton);

                clearSearchButton.addEventListener('click', function () {
                    searchInput.value = '';
                    toggleClearButton();
                    searchInput.closest('form').submit();
                });
            });

            //add to cart
            document.querySelectorAll('.add-to-cart-form').forEach(form => {
                form.addEventListener('submit', async (event) => {
                    event.preventDefault(); 

                    const userId = form.getAttribute('data-user-id'); 
                    const productId = form.querySelector('input[name="productId"]').value;

                    if (!userId) {
                        Swal.fire({
                            title: 'Please Log In',
                            text: 'You need to be logged in to add products to the cart!',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonText: 'Log In',
                            cancelButtonText: 'Cancel'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/login';
                            }
                        });
                    } else {
                        try {
                            const response = await axios.post(`/${userId}/add-to-cart`, { productId });

                            if (response.data.success) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: response.data.message,
                                    icon: 'success',
                                    confirmButtonText: 'Ok'
                                });
                            } else if (response.data.exists) {
                                Swal.fire({
                                    title: 'Already in Cart',
                                    text: 'This product is already in your cart. Would you like to go to the cart?',
                                    icon: 'info',
                                    showCancelButton: true,
                                    confirmButtonText: 'Go to Cart',
                                    cancelButtonText: 'Continue Shopping'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = '/cart'; 
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error!',
                                    text: response.data.message || 'Something went wrong!',
                                    icon: 'error',
                                    confirmButtonText: 'Ok'
                                });
                            }
                        } catch (error) {
                            console.error('Error adding product to cart:', error);
                            Swal.fire({
                                title: 'Error!',
                                text: error.response?.data?.message || 'Failed to add product to cart.',
                                icon: 'error',
                                confirmButtonText: 'Ok'
                            });
                        }
                    }
                });
            });

            // Function to handle dynamic filtering
            function applyFilters() {
                const url = new URL(window.location.href);
                const params = new URLSearchParams(url.search);

                const formData = new FormData(document.getElementById('filterForm'));

                params.delete('categories');
                params.delete('brands');

                formData.forEach((value, key) => {
                    if (key === 'categories' || key === 'brands') {
                        params.append(key, value);
                    } else {
                        params.set(key, value);
                    }
                });

                axios.get(`${url.pathname}?${params.toString()}`)
                    .then(response => {
                        window.location.href = `${url.pathname}?${params.toString()}`; 
                    })
                    .catch(error => {
                        console.error('Error fetching filtered products', error);
                    });
            }

            //applay filter
            document.querySelectorAll('#filterForm input, #filterForm select').forEach(input => {
                input.addEventListener('change', applyFilters);
            });

            document.getElementById('sortby').addEventListener('change', function() {
                const url = new URL(window.location.href);
                const params = new URLSearchParams(url.search);

                const sortValue = this.value;
                params.set('sortby', sortValue);

                axios.get(`${url.pathname}?${params.toString()}`)
                    .then(response => {
                        window.location.href = `${url.pathname}?${params.toString()}`;
                    })
                    .catch(error => {
                        console.error('Error sorting products', error);
                    });
            });

            // Add to wishlist button and link axios
            document.querySelectorAll(".btn-add-wishlist, .add-to-wishlist-link").forEach((element) => {
                element.addEventListener("click", async (e) => {
                    e.preventDefault(); 

                    const productId = e.target.getAttribute("data-product-id");
                    if (!productId) {
                        return; 
                    }

                    try {
                        const response = await axios.post("/profile/wishlist/add", { productId });

                        if (!response.data.success) {
                            if (response.data.redirectToLogin) {
                                Swal.fire({
                                    title: "Please login!",
                                    text: "You need to login to add items to your wishlist.",
                                    icon: "warning",
                                    showCancelButton: true,
                                    confirmButtonText: "Login",
                                    cancelButtonText: "Cancel",
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/login"; // redirect to login
                                    }
                                });
                            }
                        } else {
                            if (response.data.alreadyInWishlist) {
                                Swal.fire({
                                    title: "Product already in wishlist",
                                    text: "This product is already in your wishlist.",
                                    icon: "info",
                                    showCancelButton: true,
                                    confirmButtonText: "Go to Wishlist",
                                    cancelButtonText: "Keep Shopping",
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/profile/wishlist"; // redirect to wishlist
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: "Added!",
                                    text: response.data.message,
                                    icon: "success",
                                    confirmButtonText: "Continue Shopping",
                                });
                            }
                        }
                    } catch (error) {
                        if (error.response && error.response.status === 401) {
                            // Handle unauthorized error
                            Swal.fire({
                                title: "Please login!",
                                text: "You need to login to add items to your wishlist.",
                                icon: "warning",
                                showCancelButton: true,
                                confirmButtonText: "Login",
                                cancelButtonText: "Cancel",
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.href = "/login"; // redirect to login
                                }
                            });
                        } else {
                            console.error("Error adding to wishlist:", error);
                            Swal.fire({
                                title: "Error",
                                text: "Something went wrong. Please try again later.",
                                icon: "error",
                                confirmButtonText: "Close",
                            });
                        }
                    }
                });
            });


        </script>
    </body>

</html>
