        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            //add to wishlist
            document.querySelectorAll(".addToCartBtn").forEach((button) => {
                button.addEventListener("click", async (event) => {
                    event.preventDefault(); // Prevent default action of the button

                    const userId = button.getAttribute("data-user-id"); // Get the user ID from data attribute
                    const productId = button.getAttribute("data-product-id"); // Get the product ID from data attribute

                    if (!userId) {
                        // Show SweetAlert asking the user to log in
                        Swal.fire({
                            title: "Please Log In",
                            text: "You need to be logged in to add products to the cart!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonText: "Log In",
                            cancelButtonText: "Cancel",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Redirect to the login page
                                window.location.href = "/login";
                            }
                        });
                    } else {
                        try {
                            // Send the POST request to add the product to the cart
                            const response = await axios.post(`/${userId}/add-to-cart`, { productId });

                            // Show SweetAlert based on the response
                            if (response.data.success) {
                                Swal.fire({
                                    title: "Success!",
                                    text: response.data.message,
                                    icon: "success",
                                    confirmButtonText: "Ok",
                                });
                            } else if (response.data.exists) {
                                // If the product already exists in the cart, show a SweetAlert with a "Go to Cart" button
                                Swal.fire({
                                    title: "Already in Cart",
                                    text: "This product is already in your cart. Would you like to go to the cart?",
                                    icon: "info",
                                    showCancelButton: true,
                                    confirmButtonText: "Go to Cart",
                                    cancelButtonText: "Continue Shopping",
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/cart"; // Redirect to the cart page
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: "Error!",
                                    text: response.data.message || "Something went wrong!",
                                    icon: "error",
                                    confirmButtonText: "Ok",
                                });
                            }
                        } catch (error) {
                            console.error("Error adding product to cart:", error);
                            Swal.fire({
                                title: "Error!",
                                text: error.response?.data?.message || "Failed to add product to cart.",
                                icon: "error",
                                confirmButtonText: "Ok",
                            });
                        }
                    }
                });
            });

            //remove item
            document.querySelectorAll(".btn-remove").forEach((button) => {
                button.addEventListener("click", async (e) => {
                    // Find the closest <tr> element to the clicked button
                    const row = e.target.closest("tr");

                    // Retrieve the productId and userId from the <tr>
                    const productId = button.getAttribute("data-product-id");
                    const userId = button.getAttribute("data-user-id");

                    if (!userId) {
                        // Show SweetAlert asking the user to log in
                        Swal.fire({
                            title: "Please Log In",
                            text: "You need to be logged in to add products to the cart!",
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonText: "Log In",
                            cancelButtonText: "Cancel",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Redirect to the login page
                                window.location.href = "/login";
                            }
                        });
                    } else {
                        try {
                            // Send a request to remove the product from the wishlist
                            const response = await axios.post(`/wishlist/remove`, { productId });

                            if (response.data.success) {
                                // Remove the product row from the DOM
                                row.remove();

                                Swal.fire({
                                    title: "Removed!",
                                    text: "The product has been removed from your wishlist.",
                                    icon: "success",
                                    confirmButtonText: "Ok",
                                });
                            } else {
                                Swal.fire({
                                    title: "Error",
                                    text: response.data.message || "Something went wrong!",
                                    icon: "error",
                                    confirmButtonText: "Ok",
                                });
                            }
                        } catch (error) {
                            console.error("Error removing product from wishlist:", error);
                            Swal.fire({
                                title: "Error",
                                text: "Failed to remove the product. Please try again later.",
                                icon: "error",
                                confirmButtonText: "Ok",
                            });
                        }
                    }
                });
            });
        </script>
