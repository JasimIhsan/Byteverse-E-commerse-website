        <script>
            function validateFirstName() {
                const firstName = document.getElementById("firstName").value;
                const firstNameError = document.getElementById("firstNameError");

                if (firstName.trim().length === 0) {
                    firstNameError.textContent = "First name cannot be empty.";
                    return false;
                } else if (firstName.includes("  ")) {
                    firstNameError.textContent = "First name cannot contain consecutive spaces.";
                    return false;
                } else if (firstName.length < 2) {
                    firstNameError.textContent = "First name must be at least 2 characters long.";
                    return false;
                } else {
                    firstNameError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validatePhoneNumber() {
                const phoneNumber = document.getElementById("phoneNumber").value;
                const phoneNumberError = document.getElementById("phoneNumberError");

                // Indian phone number regex
                const phoneRegex = /^(\+91[-\s]?)?[0-9]{10}$/;

                if (phoneNumber.trim().length === 0) {
                    phoneNumberError.textContent = "Phone number cannot be empty.";
                    return false;
                } else if (!phoneRegex.test(phoneNumber)) {
                    phoneNumberError.textContent = "Phone number must be a valid 10-digit number (e.g., 1234567890 or +91 1234567890).";
                    return false;
                } else {
                    phoneNumberError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validateStreet() {
                const street = document.getElementById("street").value;
                const streetError = document.getElementById("streetError");

                if (street.trim().length === 0) {
                    streetError.textContent = "Street address cannot be empty.";
                    return false;
                } else {
                    streetError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validateCity() {
                const city = document.getElementById("city").value;
                const cityError = document.getElementById("cityError");

                if (city.trim().length === 0) {
                    cityError.textContent = "City cannot be empty.";
                    return false;
                } else {
                    cityError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validateState() {
                const state = document.getElementById("state").value;
                const stateError = document.getElementById("stateError");

                if (state.trim().length === 0) {
                    stateError.textContent = "State cannot be empty.";
                    return false;
                } else {
                    stateError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validatePostalCode() {
                const postalCode = document.getElementById("postalCode").value;
                const postalCodeError = document.getElementById("postalCodeError");

                // Indian postal code regex
                const postalCodeRegex = /^[1-9][0-9]{5}$/;

                if (postalCode.trim().length === 0) {
                    postalCodeError.textContent = "Postal code cannot be empty.";
                    return false;
                } else if (!postalCodeRegex.test(postalCode)) {
                    postalCodeError.textContent = "Postal code must be a 6-digit number (e.g., 110001).";
                    return false;
                } else {
                    postalCodeError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validateCountry() {
                const country = document.getElementById("country").value;
                const countryError = document.getElementById("countryError");

                if (country.trim().length === 0) {
                    countryError.textContent = "Country cannot be empty.";
                    return false;
                } else {
                    countryError.textContent = ""; // Clear the error message
                    return true;
                }
            }

            function validateForm() {
                // Validate all fields
                const isFirstNameValid = validateFirstName();
                const isPhoneNumberValid = validatePhoneNumber();
                const isStreetValid = validateStreet();
                const isCityValid = validateCity();
                const isStateValid = validateState();
                const isPostalCodeValid = validatePostalCode();
                const isCountryValid = validateCountry();

                // Return true if all fields are valid
                return isFirstNameValid && isPhoneNumberValid && isStreetValid && isCityValid && isStateValid && isPostalCodeValid && isCountryValid;
            }

            // Call validation functions on keyup events
            document.addEventListener("DOMContentLoaded", function () {
                document.getElementById("firstName").onkeyup = validateFirstName;
                document.getElementById("phoneNumber").onkeyup = validatePhoneNumber;
                document.getElementById("street").onkeyup = validateStreet;
                document.getElementById("city").onkeyup = validateCity;
                document.getElementById("state").onkeyup = validateState;
                document.getElementById("postalCode").onkeyup = validatePostalCode;
                document.getElementById("country").onkeyup = validateCountry;
            });
        </script>
