        <script>
            function cancelOrder(orderId, status) {
                Swal.fire({
                    title: "Cancel Order",
                    input: "textarea",
                    inputPlaceholder: "Enter reason for cancellation",
                    showCancelButton: true,
                    confirmButtonText: "Submit",
                    cancelButtonText: "Close",
                    preConfirm: (reason) => {
                        if (!reason) {
                            Swal.showValidationMessage("Reason is required for cancellation.");
                        }
                        return { reason: reason };
                    },
                }).then((result) => {
                    if (result.isConfirmed) {
                        const reason = result.value.reason;
                        Swal.fire({
                            title: "Are you sure?",
                            text: `You are about to cancel this order.`,
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonText: "Yes, cancel it!",
                            cancelButtonText: "No, keep it",
                        }).then((confirmation) => {
                            if (confirmation.isConfirmed) {
                                if (status === "Pending" || status === "Processing") {
                                    sendCancellation(orderId, reason);
                                } else {
                                    Swal.fire("Cannot Cancel!", "Order status does not allow cancellation.", "error");
                                }
                            }
                        });
                    }
                });
            }

            function sendCancellation(orderId, reason) {
                axios
                    .post(`/profile/orders/cancel-order`, {
                        orderId: orderId,
                        reason: reason,
                    })
                    .then((response) => {
                        if (response.data.success) {
                            Swal.fire("Cancelled!", response.data.message, "success").then(() => location.reload()); // Reload the page to reflect changes
                        } else {
                            Swal.fire("Error!", response.data.message || "Failed to cancel the order.", "error");
                        }
                    })
                    .catch((error) => {
                        console.error("Error:", error);
                        Swal.fire("Error!", "Something went wrong.", "error");
                    });
            }

            function downloadInvoice(orderId) {
                try {
                    window.open(`/profile/orders/orderdetail/${orderId}/invoice`, "_blank");
                } catch (error) {
                    console.error("Error downloading invoice:", error);
                }
            }

            async function retryPayment(orderId) {
                try {
                    const response = await axios.post(`/cart/checkout/upi/retry-payment/${orderId}`);

                    console.log('resoponse : ', response);
                    
                    if (response.status === 200) {
                        openRazorpayPayment(response.data.orderId, response.data.total);
                    } else {
                        alert(response.data.message); 
                    }
                } catch (error) {
                    console.error('Error retrying payment:', error);
                    alert('Error retrying payment. Please try again later.');
                }
            }

            function openRazorpayPayment(orderId, total) {
                const options = {
                    key: '<%= process.env.RAZORPAY_KEY_ID %>',
                    amount: total * 100, 
                    currency: "INR",
                    name: "Byteverse",
                    description: "Retry Payment",
                    order_id: orderId,
                    handler: function (response) {
                        console.log(response);
                        verifyPayment(response);
                    },
                    prefill: {
                        name: "Your Name",
                        email: "your_email@example.com",
                        contact: "9999999999"
                    },
                    notes: {
                        address: "Your Address",
                    },
                    theme: {
                        color: "#3399cc"
                    }
                };

                const rzp = new Razorpay(options);
                rzp.open();

                rzp.on("payment.failed", async function (response) {
                    const failureData = response.error;

                    rzp.close();
                    document.querySelector(".razorpay-container")?.remove();

                    console.log(" failure response : ", response);

                    Swal.fire({
                        title: "Payment Failed",
                        text: "Unfortunately, the payment failed. Please try again later.",
                        icon: "error",
                        confirmButtonText: "Okay",
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                            try {
                                await axios.post("/cart/checkout/upi/order-failure", {
                                    order_id: failureData.metadata.order_id,
                                    payment_id: failureData.metadata.payment_id,
                                    paymentStatus: "Failed",
                                    deliveryStatus: "Pending",
                                    failureDetails: {
                                        code: failureData.code,
                                        description: failureData.description,
                                        source: failureData.source,
                                        step: failureData.step,
                                        reason: failureData.reason,
                                    },
                                });

                                window.location.href = `/cart/checkout/order-placed/₹{newOrderId}`;
                            } catch (error) {
                                console.error("Error updating order on payment failure:", error);
                            }
                        }
                    });
                });
            }

            async function verifyPayment(response) {
                try {
                    const { razorpay_order_id, razorpay_payment_id, razorpay_signature } = response;

                    console.log('varifyPayment rsp : ', response);
                    

                    const result = await axios.post('/cart/checkout/upi/verify-payment', {
                        order_id : razorpay_order_id,
                        payment_id : razorpay_payment_id,
                        razorpay_signature,
                    });

                    console.log("Payment verification result:", result.data);
                    
                    let order_Id = result.data.newOrderId;

                    if (result.status === 200) {
                        window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Payment Verification Failed",
                            text: "We couldn't verify your payment. Please contact support.",
                            confirmButtonText: "OK",
                            footer: "<a href='/contact'>Contact Support</a>",
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = `/cart/checkout/order-placed/${order_Id}`;
                            }
                        });
                    }
                } catch (error) {
                    console.error("Error during payment verification:", error);
                    alert("An error occurred during payment verification.");
                }
            }     

            function returnOrder(orderId, deliveryStatus) {
                if (deliveryStatus !== "Delivered") {
                    Swal.fire({
                        icon: 'error',
                        title: 'Not Eligible',
                        text: 'Order is not eligible for return.',
                    });
                    return;
                }

                Swal.fire({
                    title: 'Return Reason',
                    input: 'textarea',
                    inputLabel: 'Please provide a reason for the return:',
                    inputPlaceholder: 'Enter reason here',
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                    cancelButtonText: 'Cancel',
                    inputValidator: (value) => {
                        if (!value) {
                            return 'You need to provide a reason!';
                        }
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios.post('/profile/orders/return-order', { orderId, reason: result.value })
                            .then(response => {
                                Swal.fire({
                                    icon: 'success',
                                    title: 'Return Successful',
                                    text: response.data.message,
                                }).then((result) => {
                                    location.reload()
                                });
                                console.log("Refund processed:", response.data);
                            })
                            .catch(error => {
                                let errorMessage = "An error occurred while processing the return.";
                                if (error.response && error.response.data && error.response.data.message) {
                                    errorMessage = error.response.data.message;
                                }
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: errorMessage,
                                });
                                console.error("Error processing return:", error);
                            });
                    }
                });
            }
        </script>
