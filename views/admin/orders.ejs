<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Byteverse | User Management</title>
    <link rel="stylesheet" href="/css/admin/user-management.css" />
    <!-- Include SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
    <!-- Include SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="unique-sidebar">
            <div class="unique-sidebar-header">
                <h2>Byteverse</h2>
            </div>
            <ul class="unique-sidebar-menu">
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/user-management">Users</a></li>
                <li><a href="/admin/product-management">Products</a></li>
                <li class="active"><a href="#">Orders</a></li>
                <li><a href="/admin/category-management">Categories</a></li>
                <li><a href="/admin/coupon-management">Coupon</a></li>
                <li><a href="/admin/offer-management">Offers</a></li>
                <li><a href="#">Support</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <div class="product-list-container">
            <h1>Order Management</h1>

            <!-- Breadcrumbs -->
            <nav class="breadcrumbs">
                <a href="/admin/dashboard">Dashboard</a>
                <span>&gt;</span>
                <a href="#">Order Management</a>
            </nav>

            <!-- Orders Table -->
            <table class="product-table">
                <thead>
                    <tr>
                        <th>SI No</th>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Total</th>
                        <th>Payment Method</th>
                        <th>Delivery Status</th>
                        <th>Order Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (orders.length > 0) { %>
                        <% orders.forEach(function(order, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= order.orderId %></td>
                            <td><%= order.userId ? order.userId.username : 'User Not Found' %></td>
                            <td>â‚¹<%= order.total.toFixed(2) %></td>
                            <td><%= order.paymentMethod %></td>
                            <td>
                                <select style="height: 30px; border-radius: 4px;" name="deliveryStatus" onchange="updateDeliveryStatus('<%= order._id %>', this.value)">
                                    <option value="Pending" <%= order.deliveryStatus === "Pending" ? "selected" : "" %>>Pending</option>
                                    <option value="Processing" <%= order.deliveryStatus === "Processing" ? "selected" : "" %>>Processing</option>
                                    <option value="Shipped" <%= order.deliveryStatus === "Shipped" ? "selected" : "" %>>Shipped</option>
                                    <option value="Delivered" <%= order.deliveryStatus === "Delivered" ? "selected" : "" %>>Delivered</option>
                                    <option value="Cancelled" <%= order.deliveryStatus === "Cancelled" ? "selected" : "" %>>Cancelled</option>
                                    <option value="Returned" <%= order.deliveryStatus === "Returned" ? "selected" : "" %>>Returned</option>
                                </select>
                            </td>
                            <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                            <td style="display: flex">
                                <form action="/admin/order-management/order-detail/<%= order._id %>" method="GET">
                                    <button class="action-btn view-btn" type="submit">View</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="8">No orders available.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <% console.log('CURRENT PAGE : ',currentPage) %>
                    <a href="/admin/order-management?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/order-management?page=<%= i %>&search=<%= search %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                <% } %>
                <% if (currentPage < totalPages) { %>
                    <a href="/admin/order-management?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        function updateDeliveryStatus(orderId, status) {
            axios.post(`/admin/order-management/update-status/${orderId}`, {
                deliveryStatus: status,

            }, {
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                console.log(response.data);
                Swal.fire({
                    icon: 'success',
                    title: 'Status updated successfully',
                    customClass: {
                        confirmButton: 'your-custom-class',
                    }
                });
            })
            .catch(error => {
                console.error('Error in Axios request:', error);
                Swal.fire({
                    icon: 'error',
                    title: 'Failed to update status',
                    customClass: {
                        confirmButton: 'your-custom-class',
                    }
                });
            });
        }

        document.querySelectorAll("select[name='deliveryStatus']").forEach(selectElement => {
            updateBackgroundColor(selectElement);

            selectElement.addEventListener('change', function() {
                updateBackgroundColor(selectElement);
            });
        });

        function updateBackgroundColor(selectElement) {
            const status = selectElement.value;
            switch (status) {
                case "Pending":
                selectElement.style.backgroundColor = "#FFF9C4"; // Light yellow background
                    selectElement.style.color = "#000"; // Orange text
                    break;
                case "Processing":
                    selectElement.style.backgroundColor = "#D7CCC8";
                    selectElement.style.color = "#3E2723"
                    break;
                case "Shipped":
                    selectElement.style.backgroundColor = "#B2EBF2"; // blue for Shipped
                    selectElement.style.color = "#006064"
                    break;
                case "Delivered":
                    selectElement.style.backgroundColor = "#81C784"; // green for Delivered
                    selectElement.style.color = "#1B5E20"
                    break;
                case "Cancelled":
                    selectElement.style.backgroundColor = "#FFCCBC"; // red for Cancelled
                    selectElement.style.color = "#900404"
                    break;
                case 'Returned':
                    selectElement.style.backgroundColor = "red"; // red for Cancelled
                    selectElement.style.color = "white"
                    break;
                default:
                    selectElement.style.backgroundColor = ""; // default color
                    break;
            }
        }

    </script>
</body>
</html>
