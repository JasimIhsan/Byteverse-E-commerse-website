<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Order Detail #1234</title>
        <style>
            body {
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
                line-height: 1.5;
                color: #333;
                background-color: #f9fafb;
                margin: 0;
                padding: 0;
            }
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 1.5rem;
            }
            .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 1.5rem;
            }
            h1 {
                font-size: 1.875rem;
                font-weight: bold;
                margin: 0;
            }
            .badge {
                background-color: #e5e7eb;
                color: #374151;
                padding: 0.25rem 0.75rem;
                border-radius: 9999px;
                font-size: 0.875rem;
                font-weight: 500;
            }
            .grid {
                display: grid;
                gap: 1.5rem;
            }
            @media (min-width: 768px) {
                .grid-cols-2 {
                    grid-template-columns: repeat(2, minmax(0, 1fr));
                }
            }
            .card {
                background-color: #fff;
                border-radius: 0.5rem;
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
                overflow: hidden;
            }
            .card-header {
                padding: 1.25rem 1.5rem;
                border-bottom: 1px solid #e5e7eb;
            }
            .card-title {
                font-size: 1.25rem;
                font-weight: 600;
                margin: 0;
            }
            .card-content {
                padding: 1.5rem;
            }
            .flex {
                display: flex;
            }
            .items-center {
                align-items: center;
            }
            .justify-between {
                justify-content: space-between;
            }
            .space-x-4 > * + * {
                margin-left: 1rem;
            }
            .mb-4 {
                margin-bottom: 1rem;
            }
            .font-medium {
                font-weight: 500;
            }
            .text-sm {
                font-size: 0.875rem;
            }
            .text-muted {
                color: #6b7280;
            }
            .mt-6 {
                margin-top: 1.5rem;
            }
            table {
                width: 100%;
                border-collapse: collapse;
            }
            th,
            td {
                padding: 0.75rem;
                text-align: left;
                border-bottom: 1px solid #e5e7eb;
            }
            th {
                font-weight: 600;
                color: #374151;
            }
            .space-y-2 > * + * {
                margin-top: 0.5rem;
            }
            .separator {
                height: 1px;
                background-color: #e5e7eb;
                margin: 1rem 0;
            }
            .btn {
                display: inline-block;
                padding: 0.5rem 1rem;
                font-size: 0.875rem;
                font-weight: 500;
                text-align: center;
                text-decoration: none;
                border-radius: 0.375rem;
                transition: background-color 0.2s;
            }
            .btn-primary {
                background-color: #3b82f6;
                color: #fff;
            }
            .btn-primary:hover {
                background-color: #2563eb;
            }
            .btn-secondary {
                background-color: #fff;
                color: #374151;
                border: 1px solid #d1d5db;
            }
            .btn-secondary:hover {
                background-color: #f3f4f6;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <header class="header">
                <h1>Order #<%= order._id %></h1>
                <% if (order.deliveryStatus) { %>
                <span class="badge"><%= order.deliveryStatus.charAt(0).toUpperCase() + order.deliveryStatus.slice(1) %></span>
                <% } else { %>
                <span class="badge">Status Not Available</span>
                <% } %>
            </header>

            <div class="grid grid-cols-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Customer Information</h2>
                    </div>
                    <div class="card-content">
                        <div class="flex items-center space-x-4 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            <div>
                                <p class="font-medium"><%= order.userId ? order.userId.username : 'N/A' %></p>
                                <p class="text-sm text-muted"><%= order.userId ? order.userId.email : 'N/A' %></p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                                <circle cx="12" cy="10" r="3"></circle>
                            </svg>
                            <address>
                                <p><%= order.Address ? order.Address.streetAddress : 'N/A' %></p>
                                <p><%= order.Address ? `${order.Address.city}, ${order.Address.state} ${order.Address.postalCode}` : 'N/A' %></p>
                                <p><%= order.Address ? order.Address.country : 'N/A' %></p>
                            </address>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Order Summary</h2>
                    </div>
                    <div class="card-content space-y-2">
                        <div class="flex justify-between">
                            <span class="text-muted">Subtotal</span>
                            <span>$<%= subtotal.toFixed(2) %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-muted">Shipping</span>
                            <span>$<%= order.shippingCost ? order.shippingCost.toFixed(2) : '0.00' %></span>
                        </div>
                        <!-- <div class="flex justify-between">
                            <span class="text-muted">Tax</span>
                            <span>$<%= order.tax ? order.tax.toFixed(2) : '0.00' %></span>
                        </div> -->
                        <div class="separator"></div>
                        <div class="flex justify-between font-medium">
                            <span>Total</span>
                            <span>$<%= order.total ? order.total.toFixed(2) : '0.00' %></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-6">
                <div class="card-header">
                    <h2 class="card-title">Order Items</h2>
                </div>
                <div class="card-content">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                                <% if (order.deliveryStatus == 'Pending' || order.deliveryStatus == 'Processing') { %>
                                    <th style="display: flex; justify-content: center">Action</th>
                                <% } %>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (order.products && order.products.length > 0) { %>
                                <% order.products.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <% if (product.productId.images && product.productId.images.length > 0) { %>
                                                <img src="/<%= product.productId.images[0] %>" alt="Product Image" style="width: 50px; height: 50px" />
                                            <% } else { %>
                                                <img src="/path/to/default-image.jpg" alt="No Image" style="width: 50px; height: 50px" />
                                            <% } %>
                                        </td>
                                        <td><%= product.productId.name ? product.productId.name : 'N/A' %></td>
                                        <td><%= product.quantity !== undefined ? product.quantity : 0 %></td>
                                        <td>$<%= product.price !== undefined ? product.price.toFixed(2) : '0.00' %></td>
                                        <td>$<%= (product.quantity * product.price).toFixed(2) %></td>
                                        <% if (order.deliveryStatus == 'Pending' || order.deliveryStatus == 'Processing') { %>
                                            <td style="display: flex; justify-content: center; padding: 24px 0px">
                                                <button class="btn btn-secondary" onclick="cancelOrderItem('<%= order._id %>', '<%= product.productId._id %>')">Remove</button>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" style="text-align: center">No items found in this order.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    
                </div>
            </div>

            <div class="grid grid-cols-2 mt-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Payment Information</h2>
                    </div>
                    <div class="card-content space-y-2">
                        <div class="flex items-center space-x-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                                <line x1="1" y1="10" x2="23" y2="10"></line>
                            </svg>
                            <span> <%= order.paymentMethod ? order.paymentMethod : 'N/A' %></span>
                        </div>
                        <div class="flex items-center space-x-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="2" y="6" width="20" height="12" rx="2"></rect>
                                <circle cx="12" cy="12" r="2"></circle>
                                <path d="M6 12h.01M18 12h.01"></path>
                            </svg>
                            <span>$<%= order.total && order.total.toFixed(2) %></span>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Shipping Information</h2>
                    </div>
                    <div class="card-content space-y-2">
                        <div class="flex items-center space-x-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="1" y="3" width="15" height="13"></rect>
                                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                                <circle cx="5.5" cy="18.5" r="2.5"></circle>
                                <circle cx="18.5" cy="18.5" r="2.5"></circle>
                            </svg>
                            <span> Standerd Shipping </span>
                        </div>
                        <div class="flex items-center space-x-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
                                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                                <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                                <line x1="12" y1="22.08" x2="12" y2="12"></line>
                            </svg>
                            <span> <% if (order.deliveryStatus === 'Delivered') { %> Delivered <% } else if (order.deliveryStatus === 'Shipped' && order.shipping && order.shipping.status) { %> <%= order.shipping.status %> <% } else if (order.deliveryStatus === 'Pending') { %> <% } else { %> Pending Shipment <% } %> </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            function cancelOrderItem(orderId, productId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!",
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios
                            .post("/admin/order-management/order-detail/remove-order-item", { orderId, productId })
                            .then((response) => {
                                const message = response.data.message;
                                Swal.fire({
                                    title: "Deleted!",
                                    text: message,
                                    icon: "success",
                                }).then(() => {
                                    // Redirect to order management if the order was deleted
                                    if (message.includes("Order deleted successfully")) {
                                        window.location.href = "/admin/order-management"; // Redirect here
                                    } else {
                                        location.reload(); // Reload the page after confirming
                                    }
                                });
                            })
                            .catch((error) => {
                                console.error(error);
                                alert("Failed to remove item. Please try again.");
                            });
                    }
                });
            }
        </script>
    </body>
</html>
