<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>User Detail - Admin Dashboard</title>
        <link rel="shortcut icon" href="/assets/images/icons/favicon.ico" />
        <style>
            body {
                font-family: Arial, sans-serif;
                line-height: 1.6;
                color: #333;
                margin: 0;
                padding: 0;
                background-color: #f4f4f4;
            }
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 20px;
            }
            .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 20px;
            }
            h1,
            h2,
            h3 {
                margin-top: 0;
            }
            .button {
                background-color: #007bff;
                color: white;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
                border-radius: 5px;
            }
            .button-outline {
                background-color: transparent;
                color: #007bff;
                border: 1px solid #007bff;
            }
            .button-danger {
                background-color: #dc3545;
            }
            .grid {
                display: grid;
                gap: 20px;
            }
            .card {
                background-color: white;
                border-radius: 5px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                padding: 20px;
            }
            .form-group {
                margin-bottom: 15px;
            }
            label {
                display: block;
                margin-bottom: 5px;
            }
            input,
            textarea,
            select {
                width: 97%;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }
            .avatar {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                background-color: #ddd;
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 24px;
                color: #666;
            }
            .badge {
                display: inline-block;
                padding: 2px 8px;
                border-radius: 12px;
                font-size: 12px;
                font-weight: bold;
            }
            .badge-outline {
                border: 1px solid #28a745;
                color: #28a745;
            }
            .switch {
                position: relative;
                display: inline-block;
                width: 60px;
                height: 34px;
            }
            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }
            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: 0.4s;
                border-radius: 34px;
            }
            .slider:before {
                position: absolute;
                content: "";
                height: 26px;
                width: 26px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }
            input:checked + .slider {
                background-color: #2196f3;
            }
            input:checked + .slider:before {
                transform: translateX(26px);
            }
            .tabs {
                display: flex;
                border-bottom: 1px solid #ddd;
                margin-bottom: 20px;
            }
            .tab {
                padding: 10px 20px;
                cursor: pointer;
                border-bottom: 2px solid transparent;
            }
            .tab.active {
                border-bottom-color: #007bff;
            }
            .tab-content {
                display: none;
            }
            .tab-content.active {
                display: block;
            }
            @media (min-width: 768px) {
                .grid {
                    grid-template-columns: 2fr 1fr;
                }
            }
            .order-actions {
                flex: 1;
                text-align: right;
                display: flex;
                align-items: center;
                justify-content: flex-end;
                gap: 10px;
            }

            .status-badge {
                padding: 6px 12px;
                border-radius: 4px;
                font-size: 14px;
                font-weight: 500;
                text-transform: capitalize;
                color: white;
            }

            .status-delivered {
                background-color: #4caf50; /* Green */
                border: 1px solid #43a047;
            }

            .status-pending {
                background-color: #ff9800; /* Orange */
                border: 1px solid #f57c00;
            }

            .status-processing {
                background-color: #2196f3; /* Blue */
                border: 1px solid #1e88e5;
            }

            .status-cancelled {
                background-color: #f44336; /* Red */
                border: 1px solid #e53935;
            }

            .status-shipped {
                background-color: #9c27b0; /* Purple */
                border: 1px solid #8e24aa;
            }

            .status-returned {
                background-color: #795548; /* Brown */
                border: 1px solid #6d4c41;
            }

            .view-details {
                text-decoration: none;
                color: #007bff;
                padding: 6px 12px;
                border-radius: 4px;
                transition: all 0.2s ease;
            }

            .view-details:hover {
                background-color: #f0f0f0;
                color: #0056b3;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="header">
                <h1>User Details</h1>
            </div>

            <div class="grid">
                <div class="card">
                    <h2>User Information</h2>
                    <form id="userForm">
                        <!-- Displaying basic user info like username and email -->
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" id="username" value="<%= user.username %>" disabled />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" value="<%= user.email %>" disabled />
                        </div>

                        <!-- Displaying all addresses -->
                    </form>
                </div>
            </div>

            <div style="margin-top: 20px">
                <div class="card">
                    <h2>Order History</h2>
                    <p>Recent orders placed by the user.</p>

                    <% if (orders.length > 0) { %>
                    <ul style="list-style-type: none; padding: 0">
                        <% orders.forEach(order => { %>
                        <li style="display: flex; justify-content: space-between; margin-bottom: 10px; padding: 10px; border: 1px solid #ddd; border-radius: 5px; align-items: center">
                            <div style="flex: 1">
                                <span style="font-weight: bold">Order #<%= order._id %></span>
                                <p style="margin: 0; font-size: 0.9em; color: #666">Placed on: <%= new Date(order.createdAt).toLocaleDateString() %></p>
                            </div>
                            <div style="flex: 1">
                                <span style="font-weight: bold">Total: â‚¹<%= order.total.toFixed(2) %></span>
                            </div>
                            <div class="order-actions">
                                <span class="status-badge <%= order.deliveryStatus.toLowerCase() === 'delivered' ? 'status-delivered' : order.deliveryStatus.toLowerCase() === 'pending' ? 'status-pending' : order.deliveryStatus.toLowerCase() === 'processing' ? 'status-processing' : order.deliveryStatus.toLowerCase() === 'shipped' ? 'status-shipped' : order.deliveryStatus.toLowerCase() === 'returned' ? 'status-returned' : 'status-cancelled' %>"> <%= order.deliveryStatus %> </span>
                                <a href="/admin/order-management/order-detail/<%= order._id %>" class="view-details">View Details</a>
                            </div>
                        </li>
                        <% }) %>
                    </ul>
                    <% } else { %>
                    <p>No orders found for this user.</p>
                    <% } %>
                </div>
            </div>
        </div>

        <script>
            const editToggle = document.getElementById("editToggle");
            const saveButton = document.getElementById("saveButton");
            const changeAvatarButton = document.getElementById("changeAvatarButton");
            const form = document.getElementById("userForm");

            editToggle.addEventListener("click", () => {
                const isEditing = editToggle.textContent === "Cancel";
                editToggle.textContent = isEditing ? "Edit" : "Cancel";
                saveButton.style.display = isEditing ? "none" : "inline-block";
                changeAvatarButton.style.display = isEditing ? "none" : "inline-block";

                Array.from(form.elements).forEach((element) => {
                    element.disabled = isEditing;
                });
            });

            const tabs = document.querySelectorAll(".tab");
            const tabContents = document.querySelectorAll(".tab-content");

            tabs.forEach((tab) => {
                tab.addEventListener("click", () => {
                    const tabId = tab.getAttribute("data-tab");

                    tabs.forEach((t) => t.classList.remove("active"));
                    tabContents.forEach((content) => content.classList.remove("active"));

                    tab.classList.add("active");
                    document.getElementById(`${tabId}Tab`).classList.add("active");
                });
            });
        </script>
    </body>
</html>
