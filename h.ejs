<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Byteverse | Coupon Management</title>
        <link rel="stylesheet" href="/css/admin/user-management.css" />
        <!-- Include SweetAlert2 CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
        <!-- Include SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    </head>

    <body>
        <div class="dashboard-container">
            <!-- Sidebar -->
            <aside class="unique-sidebar">
                <div class="unique-sidebar-header">
                    <h2>Byteverse</h2>
                </div>
                <ul class="unique-sidebar-menu">
                    <li><a href="/admin/dashboard">Dashboard</a></li>
                    <li><a href="/admin/user-management">Users</a></li>
                    <li><a href="/admin/product-management">Products</a></li>
                    <li><a href="/admin/order-management">Orders</a></li>
                    <li><a href="/admin/category-management">Categories</a></li>
                    <li class="active"><a href="">Coupons</a></li>
                    <li><a href="#">Offers</a></li>
                    <li><a href="#">Support</a></li>
                    <li><a href="#">Settings</a></li>
                </ul>
            </aside>

            <!-- Main Content -->
            <div class="coupon-list-container">
                <h1>Coupon Management</h1>

                <!-- Breadcrumbs -->
                <nav class="breadcrumbs">
                    <a href="/admin/dashboard">Dashboard</a>
                    <span>&gt;</span>
                    <a href="#">Coupon Management</a>
                </nav>

                <!-- Coupons Table -->
                <table class="product-table">
                    <thead>
                        <tr>
                            <th>SI No</th>
                            <th>Coupon Code</th>
                            <th>Discount</th>
                            <th>Minimum Spend</th>
                            <th>Expiry Date</th>
                            <th>Used Count</th>
                            <th>Usage Limit</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (coupons.length > 0) { %> <% coupons.forEach(function(coupon, index) { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount %> %</td>
                            <td>$<%= coupon.minimumSpend.toFixed(2) %></td>
                            <td><%= new Date(coupon.expiryDate).toLocaleDateString() %></td>
                            <td><%= coupon.usedCount %></td>
                            <td><%= coupon.usageLimit %></td>
                            <td style="display: flex">
                                <form action="/admin/coupon-management/edit/<%= coupon._id %>" method="GET">
                                    <button class="action-btn view-btn" type="submit">Edit</button>
                                </form>
                                <button class="action-btn delete-btn" onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>
                            </td>
                        </tr>
                        <% }); %> <% } else { %>
                        <tr>
                            <td colspan="8">No coupons available.</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                    <a href="/admin/coupon-management?page=<%= currentPage - 1 %>&search=<%= search %>">Previous</a>
                    <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="/admin/coupon-management?page=<%= i %>&search=<%= search %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
                    <% } %> <% if (currentPage < totalPages) { %>
                    <a href="/admin/coupon-management?page=<%= currentPage + 1 %>&search=<%= search %>">Next</a>
                    <% } %>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script>
            function deleteCoupon(couponId) {
                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!",
                }).then((result) => {
                    if (result.isConfirmed) {
                        axios
                            .delete(`/admin/coupon-management/delete/${couponId}`)
                            .then((response) => {
                                Swal.fire({
                                    icon: "success",
                                    title: "Coupon deleted successfully",
                                    customClass: {
                                        confirmButton: "your-custom-class",
                                    },
                                }).then(() => {
                                    window.location.reload();
                                });
                            })
                            .catch((error) => {
                                console.error("Error in Axios request:", error);
                                Swal.fire({
                                    icon: "error",
                                    title: "Failed to delete coupon",
                                    customClass: {
                                        confirmButton: "your-custom-class",
                                    },
                                });
                            });
                    }
                });
            }
        </script>
    </body>
</html>
